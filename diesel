    <div class="container">
        <h1>Controle de Combustível - Almoxarifado Biofuga</h1>
        <form onsubmit="calculateFuel(event)">
            <label for="height">Altura do líquido (h) em cm:</label>
            <input type="number" id="height" placeholder="Ex: 123" required>

            <label for="lastMeasurement">Quantidade de litros na última medição (opcional):</label>
            <input type="number" id="lastMeasurement" placeholder="Ex: 5000">

            <!-- Valores predefinidos e ocultos -->
            <input type="hidden" id="radius" value="80">
            <input type="hidden" id="length" value="300">
            <input type="hidden" id="capacity" value="6000">

            <button type="submit">Calcular</button>
        </form>

        <div class="result" id="result">
            <p id="output"></p>
        </div>

        <!-- Legenda reformulada -->
        <div class="footer">

<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Editor HTML com Fundo Transparente</title>
  <style>
    /* Reset básico */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    /* Estilização da página */
    body {
      font-family: 'Arial', sans-serif;
      background-color: #fff;
      color: #333;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      padding: 10px;
      text-align: center;
    }

    /* Container sem fundo (transparente) */
    .container {
      border-radius: 8px;
      padding: 20px;
      max-width: 1000px;
      width: 100%;
      background: transparent; /* Fundo transparente */
    }

    h1 {
      font-size: 26px;
      margin-bottom: 15px;
      color: #555;
    }

    textarea {
      width: 100%;
      height: 200px;
      border: 1px solid #ccc;
      border-radius: 5px;
      padding: 10px;
      font-size: 14px;
      color: #333;
      margin-bottom: 15px;
    }

    button {
      background: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      padding: 10px 20px;
      cursor: pointer;
      font-size: 14px;
    }

    button:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <!-- Container com fundo transparente -->
  <div class="container">
    <h1>Editor HTML com Fundo Transparente</h1>
    <textarea id="editor" placeholder="Digite seu código HTML aqui..."></textarea>
    <div class="buttons-container">
      <button onclick="executarCodigo()">Executar Código</button>
      <button onclick="limparCampos()">Limpar</button>
      <button onclick="colarConteudo()">Colar</button>
    </div>
  </div>

  <script>
    function executarCodigo() {
      const conteudoHTML = document.getElementById('editor').value;
      const novaAba = window.open('', '_blank');
      novaAba.document.write(conteudoHTML);
      novaAba.document.close();
    }

    function limparCampos() {
      document.getElementById('editor').value = '';
    }

    function colarConteudo() {
      navigator.clipboard.readText().then(text => {
        document.getElementById('editor').value = text;
      }).catch(err => alert('Erro ao acessar a área de transferência: ' + err));
    }
  </script>
</body>
  </html>
